/* components/login/login.wxss */
.login-box {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 50;
}

.login-box::after {
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0.3;
}

.login-con {
    width: 650rpx;
    background-color: white;
    border-radius: 10rpx;
    padding-top: 60rpx;
}

.login-con .title {
    font-size: 36rpx;
    text-align: center;
    margin-bottom: 50rpx;
}

.login-con .txt {
    font-size: 30rpx;
    margin-bottom: 80rpx;
    color: #999;
    padding: 0 50rpx;
    text-align: center;
}

.login-con .btn-box {
    font-size: 36rpx;
    color: #474747;
    /*border-top: 1rpx solid #EAEAEA;*/
    overflow: hidden;
}

.login-con .btn-box .btn {
    box-sizing: border-box;
    width: 100%;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    float: left;
    border-color: transparent;
    background-color: transparent;
    border-radius: 0;
}

.login-con .btn-box .sure {
    color: #4ECA33;
}