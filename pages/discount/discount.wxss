page {
  height: auto;
}

.container {
  background-color: #F2F2F2;
  height: calc(100vh)
}

.main-content {
  text-align: center;
  background: #F2F2F2;
  position: relative;
}
.top {
  position: relative;
}
.img {
  width: 100%;
}
.top .text-content {
  position: absolute;
  width: 698rpx;
  height: 148rpx;
  top: 70rpx;
  left: 28rpx;
  display: flex;
  padding-top: 22rpx;
  box-sizing: border-box;
  align-items: center;
}
.top .text-content .text-left {
  width: 275rpx;
  color: #fff;
  font-weight: bold;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  /* padding-left: 16rpx; */
  font-family: 'DIN Pro Cond';
}
.top .text-content .text-left .text-1 {
  font-size: 128rpx;
}
.top .text-content .text-left .text-2 {
  font-size: 60rpx;
}
.top .text-content .text-right {
  padding-left: 40rpx;
  text-align: left;
}
.top .text-content .text-right .des {
  color: #fff;
  font-size: 36rpx;
}
.top .text-content .text-right .time {
  color: #fff;
  font-size: 20rpx;
  margin-top: 6rpx;
}
.next {
  position: absolute;
  width: 100%;
  padding: 0 28rpx;
  top: 320rpx;
  box-sizing: border-box;
  overflow: hidden;
  padding-bottom:50rpx;

}
.list-box {
  width: 218rpx;
  height: 306rpx;
  padding: 14rpx 30rpx 14rpx 30rpx;
  background: #Fff;
  box-shadow:0px 4px 8px rgba(0,0,0,0.1);
  border-radius:10rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  float: left;
}
.list-box:nth-of-type(3n) {
  margin-right: 0;
}
.list-box .list-img {
  width: 160rpx;
  height: 160rpx;
}
.list-box .title {
  color: #1D2023;
  font-weight:bold;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 32rpx;
  overflow: hidden;
  text-align: center;
}
.list-box .list-money {
  text-align: center;
  color: #FF6600;
  display: flex;
  font-weight: bold;
  justify-content: center;
  /* font-family: 'DIN Pro Cond'; */
}
.list-box .list-money .mony {
  font-size: 26rpx;
  transform: scale(0.8);
}
.list-box .list-money .mony-1 {
  font-size: 36rpx;
  font-weight: bold;
}
.list-box .list-money .mony-2 {
  box-sizing: border-box;
  padding-top: 10rpx;
}
.bottom {
  width: 100%;
  text-align: center;
  color: #707070;
  font-size: 20rpx;
}
.scroll {
  width: 100%;
  height: 100%;
}
.list {
  width: 100%;
  height: 100%;
}