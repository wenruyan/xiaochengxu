/**index.wxss**/

page {
  height: auto;
}

.container {
  background-color: #fff;
}

.main-content {
  text-align: left;
}

.wrap {
  margin-top: 50rpx;
  margin-bottom: 364rpx;
}

.input-wrap {
  padding: 38rpx 0;
  font-size: 30rpx;
  position: relative;
  text-align: left;
}

.input-wrap:after {
  position: absolute;
  bottom: 0;
  content: '';
  width: 100%;
  height: 2rpx;
  background-color: #E6E6E6;
  transform: scaleY(0.5)
}

.code {
  width: 160rpx;
  text-align: center;
  height: 53rpx;
  line-height: 53rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
  z-index: 9;
}

.code view {
  font-size: 30rpx;
  color: #325AF7;
}

.code .time {
  color: #999999;
}
.title {
  color: #1D2023;
  font-size: 50rpx;
  font-weight: bold;
}
.text {
  color: #1D2023;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 50rpx;
}
.sure-btn {
  width: 584rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #FF6600;
  border-radius: 60rpx;
  color: #fff;
  font-size: 30rpx;
  border: none;
}
.sure-btn1 {
  background-color: #D9D9D9;
}