/* pages/directPayDesc/directPayDesc.wxss */

.box {
    background: rgba(241, 241, 241, 1);
    min-height: 100%;
}

.topContent {
    height: 290rpx;
    background: #FFCC35;
    padding: 0 30rpx;
    padding-top: 158rpx;
    display: flex;
}
.topbg{
    background: #808D9A !important;
}

.topContent image {
    width: 180rpx;
    height: 180rpx;
    border: 4rpx solid #fff;
    box-sizing: border-box;
    border-radius: 10rpx;
    margin-right: 22rpx;
}

.topContent .skuDesc {
    flex: 1;
}

.topContent .skuDesc .skuTitle {
    height: 42rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: rgba(91, 62, 0, 1);
}

.topContent .skuDesc .simpleDesc .desc {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    line-height: 45rpx;
    color: rgba(138, 94, 0, 1);
}
.topbg .skuDesc .skuTitle,
.topbg .skuDesc .simpleDesc .desc{
    color: #fff !important;
}
.mainContent {
    width: 630rpx;
    margin: 0 auto;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    position: relative;
    top: -60rpx;
    padding: 52rpx 30rpx 30rpx 30rpx;
}

.mainContent .title {
    font-size: 30rpx;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    margin-bottom: 40rpx;
}
.mainContent .payFail{
    height:72rpx;
    background:rgba(255,245,214,1);
    border-radius:10px;
    font-size:24rpx;
    color:rgba(72,55,3,1);
    text-align: center;
    line-height: 72rpx;
    margin-bottom: 34rpx;
}

.mainContent .accountNumber {
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    color: rgba(63, 69, 75, 1);
    border-bottom: 1px solid #E6E6E6;
    padding-bottom: 38rpx;
    margin-bottom: 52rpx;
}

.mainContent .accountNumber .skuStatus {
    font-weight: bold;
    font-size: 22rpx;
}
.mainContent .accountNumber .will{
    color: #FF6600;
}
.mainContent .accountNumber .already{
    color: #959CFF;
}
.mainContent .accountNumber .fail{
    color: #86939F
}

.mainContent .description view {
    font-size: 24rpx;
    color: rgba(96, 105, 114, 1);
    text-align: justify;
    line-height: 34rpx;
    margin: 10rpx 0;
}
.mainContent .description .contact {
    display: flex;
    align-items: center;
}
.mainContent .description .contact view{
    position: relative;
    color: #2454F5;
}
.mainContent .description .contact view button{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.mainContent .description .contact navigator{
    color: #2454F5;
}