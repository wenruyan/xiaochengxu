page {
  height: auto;
}

.container {
  background-color: #fff;
  height: calc(100vh);
  position: relative;
}

.main-content {
  text-align: center;
  background-color: #fff;
  overflow: hidden;
}

.content {
  position: relative;
  /* height: calc(100vh - 44px - 20px); */
  /* padding: 0 45rpx; */
  text-align: left;
  padding-top: 45rpx;
}
.title {
  color: #1D2023;
  font-size: 40rpx;
  font-weight: bold;
  /* margin-top: 56rpx; */
  margin-bottom: 26rpx;
  padding: 0 45rpx;
}
.input-wrap {
  padding: 15rpx 100rpx 15rpx 104rpx;
  background-color: #F5F5F5;
  border-radius: 60rpx;
  box-sizing: border-box;
  position: relative;
}
.input {
  font-size: 26rpx;
  color: #86939F;
  height: 0;
  width: 460rpx;
  /* min-height: 36rpx; */
}
.search {
  position: absolute;
  right: 46rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #2454F5;
  font-size: 26rpx;
}
.search1 {
  width: 36rpx;
  height: 36rpx;
  right: 46;
  z-index: 111;
}
.search-box {
  position: absolute;
  left: 48rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search-image {
  width: 36rpx;
  height: 36rpx;
  display: block;
}
.list {
  height: 720rpx;
  /* height: calc(100vh - 44px - 20px -  ) */
  overflow-y: auto;
  /* padding: 0 45rpx; */
}
.list-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #E6E6E6;
  height: 120rpx;
  align-items: center;
}
.item-left {
  color: #3F454B;
  font-size: 26rpx;
}
.join {
  background-color: #FFE0CB;
  width: 140rpx;
  height: 60rpx;
  line-height: 54rpx;
  text-align: center;
  border: 1px solid #FF6600;
  color: #FF6600;
  font-size: 24rpx;
  border-radius: 60rpx;
}
.bottom {
  height: 260rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  /* border-top: 1px solid #E6E6E6; */
  display: flex;
  justify-content: center;
}
.apply {
  background-color: #FF6600;
  width: 584rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 60rpx;
  margin-top: 22rpx;
}
.scroll {
  height: 100%;
  padding: 0 45rpx;
  box-sizing: border-box;
}
.scroll-wrap {
  height: 100%;
}
.no-record {
  height: 100%;
}
.no-no-record {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.no-record-text {
  color: #3F454B;
  font-size: 26rpx;
}