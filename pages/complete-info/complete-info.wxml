<view class="container">
  <navbar font-color="{{'#333333'}}" bg-op="{{1}}" canBack="{{true}}" title="乐业卡" bgColor="#F8F8F8"></navbar>
  <view class="main-content" style="padding-top: calc(88rpx + {{statusBarHeight}}px);">
