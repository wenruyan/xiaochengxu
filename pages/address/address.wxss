/**index.wxss**/
.container {
  background-color: #ffffff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  padding-bottom: 98rpx;
  color: #666;
}

.menu {
  /* padding-left: 40rpx;
  padding-top: 30rpx; */
}
.menu .menu-item {
  height: 100rpx;
  /* line-height: 100rpx; */
  width: 100%;
  position: relative;
  font-size: 32rpx;
  box-sizing: border-box;
  /* border-bottom: 1px solid #F2F2F2; */
}
.menu .menu-item::after {
  content: '';
  width: 100%;
  height: 2rpx;
  background-color: #F4F4F4;
  position: absolute;
  bottom: 0;
  left: 0;
}
.menu .menu-item:last-child::after {
  height: 0rpx;
}
/* .menu .menu-item:last-child::after {
  height: 0;
} */
.menu .menu-item .right-icon {
  position: absolute;
  top: 38rpx;
  right: 26rpx;
  width: 14rpx;
  height: 26rpx;
}
.btn-wrap {
  position:fixed;
  left:40rpx;
  right:40rpx;
  bottom:204rpx;
  display: flex;
}
.btn-wrap .btn {
  width: 292rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius:8rpx;
  font-weight: bold;
}
.btn-delate {
  background: #04C160;
  color: #fff;
}
.btn-save {
  border: 1px solid #FF6600;
  color: #FF6600;
  background: #fff;
}
.confirm-tips {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  text-align: center;
}
.confirm-tips .bg {
  width: 100%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000000;
  opacity: 0.5;
  z-index: -1;
}
.confirm-tips .content {
  width: 580rpx;
  padding-bottom: 74rpx; 
  background-color: #FFFFFF;
  border-radius: 25rpx;
  margin: 316rpx auto 125rpx;
  position: relative;
  color: #333333;
  text-align: center;
}
.confirm-tips .content .text-title {
  font-size: 46rpx;
  padding: 66rpx 0 50rpx;
  line-height: 1;
  font-weight: bold;
}
.confirm-tips .content .text-content {
  font-size: 30rpx;
  padding: 0 38rpx;
  /* line-height: 1.8; */
  text-align: left;
  white-space:normal;
  word-break:break-all;
}
.confirm-tips .content .btn {
  width: 378rpx;
  margin-top: 65rpx;
}
.confirm-tips .close image{
  width: 62rpx;
  height: 62rpx;
}
.input-wrap {
  overflow: hidden;
  font-size: 30rpx;
  height: 100rpx;
  /* line-height: 100rpx; */
}
.input-wrap .label-input {
  font-weight: bold;
  width: 120rpx;
  text-align: left;
  float: left;
  display: block;
  height: 1.4rem;
  line-height: 1.4rem;
  margin-right: 20rpx;
}
.input-wrap input {
  width: 100%;
  height: 100rpx;
  /* line-height: 100rpx; */
  text-align: left;
  display: block;
  float: left;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  color:#999;
}
.input-wrap .picker {
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 32rpx;
  font-family:PingFang-SC-Bold;
}
.content {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.menu .add-detail {
  height: 186rpx;
  border-bottom:1px solid #F2F2F2;
}
.add-detail .input-wrap {
  height: 186rpx;
}
.add-detail .input-wrap input {
  height: 186rpx;
}
.img-list {
  width: 100%;
  padding-left: 16rpx;
  box-sizing: border-box;
  margin-top: 54rpx;
  position: relative;
}
.img-list .image {
  width: 140rpx;
  height: 140rpx;
  margin-left: 26rpx;
}

.img-list .image.gray {
  background-color: #f2f2f2;
  border-radius: 10rpx;
}

.img-list .image:nth-of-type(5) {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  right: 62rpx;
  top: 6rpx;
  z-index: -1;
}

.img-list .image:nth-of-type(6) {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 52rpx;
  top: 10rpx;
  z-index: -2;
}

.shelf {
  width: 734rpx;
  height: 40rpx;
  position: relative;
  top: -12rpx;
}
.arrow-img {
  position: absolute;
  width: 17rpx;
  height: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
}